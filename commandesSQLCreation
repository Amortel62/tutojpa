CREATE TABLE PROJET (CODEPROJ VARCHAR(255) NOT NULL, MONTANTDEVIS FLOAT, DATEFINP DATE, DESCPROJ VARCHAR(255), DATEDEP DATE, NUMCLI BIGINT, PRIMARY KEY (CODEPROJ))
CREATE TABLE AFFECTATION (ID BIGINT NOT NULL, PILOTE SMALLINT DEFAULT 0, DATEAFF DATE, NUMSAL BIGINT, CODEPROJ VARCHAR(255), PRIMARY KEY (ID))
CREATE TABLE CLIENT (NUMCLI BIGINT NOT NULL, ADRCLI VARCHAR(255), NOMCLI VARCHAR(255), PRIMARY KEY (NUMCLI))
CREATE TABLE POLE (CODEPOLE VARCHAR(255) NOT NULL, NOMPOLE VARCHAR(255), PRIMARY KEY (CODEPOLE))
CREATE TABLE SALARIE (NUMSAL BIGINT NOT NULL, NOMSAL VARCHAR(255), SALAIRE FLOAT, SEXE VARCHAR(255), CODEPOLE VARCHAR(255), PRIMARY KEY (NUMSAL))
ALTER TABLE PROJET ADD CONSTRAINT FK_PROJET_NUMCLI FOREIGN KEY (NUMCLI) REFERENCES CLIENT (NUMCLI)
ALTER TABLE AFFECTATION ADD CONSTRAINT AFFECTATION_NUMSAL FOREIGN KEY (NUMSAL) REFERENCES SALARIE (NUMSAL)
ALTER TABLE AFFECTATION ADD CONSTRAINT FFECTATIONCODEPROJ FOREIGN KEY (CODEPROJ) REFERENCES PROJET (CODEPROJ)
ALTER TABLE SALARIE ADD CONSTRAINT SALARIE_CODEPOLE FOREIGN KEY (CODEPOLE) REFERENCES POLE (CODEPOLE)
CREATE TABLE SEQUENCE (SEQ_NAME VARCHAR(50) NOT NULL, SEQ_COUNT DECIMAL(15), PRIMARY KEY (SEQ_NAME))
INSERT INTO SEQUENCE(SEQ_NAME, SEQ_COUNT) values ('SEQ_GEN', 0)
